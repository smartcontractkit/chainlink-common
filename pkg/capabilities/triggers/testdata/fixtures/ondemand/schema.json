{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/smartcontractkit/chainlink/capabilities/on-demand-trigger@1.0.0/root",
  "properties": {
    "config": {
      "properties": {},
      "additionalProperties": false,
      "type": "object"
    },
    "outputs": {
      "properties": {
        "Event": {
          "properties": {
            "TriggerType": {
              "type": "string"
            },
            "ID": {
              "type": "string"
            },
            "Outputs": {
              "properties": {
                "Underlying": {
                  "type": "object"
                }
              },
              "additionalProperties": false,
              "type": "object",
              "required": [
                "Underlying"
              ]
            },
            "Value": {
              "properties": {
                "type_url": {
                  "type": "string"
                },
                "value": {
                  "type": "string",
                  "contentEncoding": "base64"
                }
              },
              "additionalProperties": false,
              "type": "object"
            },
            "OCREvent": {
              "properties": {
                "ConfigDigest": {
                  "type": "string",
                  "contentEncoding": "base64"
                },
                "SeqNr": {
                  "type": "integer"
                },
                "Report": {
                  "type": "string",
                  "contentEncoding": "base64"
                },
                "Sigs": {
                  "items": {
                    "properties": {
                      "Signature": {
                        "type": "string",
                        "contentEncoding": "base64"
                      },
                      "Signer": {
                        "type": "integer"
                      }
                    },
                    "additionalProperties": false,
                    "type": "object",
                    "required": [
                      "Signature",
                      "Signer"
                    ]
                  },
                  "type": "array"
                }
              },
              "additionalProperties": false,
              "type": "object",
              "required": [
                "ConfigDigest",
                "SeqNr",
                "Report",
                "Sigs"
              ]
            }
          },
          "additionalProperties": false,
          "type": "object",
          "required": [
            "TriggerType",
            "ID",
            "Outputs",
            "Value",
            "OCREvent"
          ]
        },
        "Err": true
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Event",
        "Err"
      ]
    }
  },
  "additionalProperties": false,
  "type": "object",
  "required": [
    "config",
    "outputs"
  ],
  "description": "An example on-demand trigger."
}